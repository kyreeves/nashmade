<br>
<div class="center">
  <div class="row">
    <div class="col s12 m6 l6">
      <div class="hide-on-med-and-down">
        <div class="showimg"><%= image_tag @product.image.url(:large) %></div>
      </div>
      <div class="hide-on-large-only">
        <div class="showimg"><%= image_tag @product.image.url(:thumb) %></div>
      </div>
    </div>
    <div class="col s12 m6 l6">

      <%= form_for [@product, @order] do |f| %>
        <% if @order.errors.any? %>
        <div id="error_explanation" class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

            <ul>
            <% @order.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field-group">
          <%= f.label :address %><br>
          <%= f.text_field :address %>
        </div>
        <div class="field-group">
          <%= f.label :city %><br>
          <%= f.text_field :city %>
        </div>
        <div class="field-group">
          <%= f.label :state %><br>
          <%= f.text_field :state %>
        </div>
        <div class="field-group">
          <%= f.submit "Complete Order", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
