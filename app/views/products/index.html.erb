<br>
<div class="row">
  <% @products.each do |product| %>
    <div class="col s12 m6 l3">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <%= link_to (image_tag product.image.url(:medium), class: 'image'), product %>
        </div>
          <div class="card-content">
            <ul>
              <li><span class="card-title activator grey-text text-darken-4"><%= product.name %><i class="mdi-navigation-more-vert right"></i></span></li>
              <li><%= number_to_currency(product.price) %></li>
            </ul>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= product.name %><i class="mdi-navigation-close right"></i></span>
            <ul>
              <li><%= number_to_currency(product.price) %></li><br>
              <li><%= "Sold by: #{product.user.name}" %></li><br>
              <li><%= product.description %></li>
              <li><%= link_to Category.find(product.category_id).name, category_products_path(product.category_id) %></li>
            </ul>
          </div>
      </div>
    </div>
  <% end %>
</div>

<% @categories.each do |c| %>
  <%= link_to c.name, category_products_path(c.id) %>
<% end %>
