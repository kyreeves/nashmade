<br>

<div class="center">
  <%= link_to 'Add Product', new_product_path, class: "waves-effect waves-light btn-large" %>
</div>

<ul class="collapsible popout" data-collapsible="accordion">
  <% @products.each do |product| %>
  <li>
    <div class="collapsible-header">
      <%= product.name %><span class="badge"><%= number_to_currency(product.price) %></span>
    </div>
    <div class="collapsible-body">
      <div class="hide-on-small-only"><p><%= image_tag product.image.url(:medium) %></p></div>
      <p><%= product.description %></p>
      <%= link_to "View", product, class: "waves-effect waves-light btn"%>
      <%= link_to "Edit", edit_product_path(product), class: "waves-effect waves-light btn"%>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure you want to delete this?',
          :'confirm-button-text' => 'Yes',
          :'cancel-button-text' => 'No way!',
          :'confirm-button-color' => '#66CD00',
          :'sweet-alert-type' => 'warning',
        }, class: "waves-effect waves-light btn" %>
    </div>
  </li>
  <% end %>
</ul>
